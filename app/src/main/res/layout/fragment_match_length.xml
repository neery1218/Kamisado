<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.radiance.kamisado.MatchLengthFragment">

    <com.radiance.kamisado.introBoardView
        android:id="@+id/introBoardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/singleButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_custom"
            android:text="1 Round"
            android:textAllCaps="false"
            android:textColor="@color/text"
            android:textSize="24sp" />

        <Space
            android:layout_width="20px"
            android:layout_height="10dp" />
        <Button
            android:id="@+id/standardButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_custom"
            android:text="3 Rounds"
            android:textAllCaps="false"
            android:textColor="@color/text"
            android:textSize="24sp" />

        <Space
            android:layout_width="20px"
            android:layout_height="10dp" />
        <Button
            android:id="@+id/extendedButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_custom"
            android:text="5 Rounds"
            android:textAllCaps="false"
            android:textColor="@color/text"
            android:textSize="24sp" />

        <Space
            android:layout_width="20px"
            android:layout_height="10dp" />
        <Button
            android:id="@+id/marathonButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_custom"
            android:text="7 Rounds"
            android:textAllCaps="false"
            android:textColor="@color/text"
            android:textSize="24sp" />


    </LinearLayout>


</RelativeLayout>
